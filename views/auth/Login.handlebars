<section id="galleryBlock">
  <article>
    <h2>
      Login
    </h2>
    <form action="/auth/login" method="POST">
      <div class="form-group">
        <label for="email">
          Email
        </label>
        <input type="email" name="email" id="email" />
      </div>
      <div class="form-group">
        <label for="password">
          Password
        </label>
        <input type="password" name="password" id="password" />
      </div>
      <div class="form-group">
        <button>
          Login
        </button>
      </div>
    </form>
  </article>
</section>