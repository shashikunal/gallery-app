<section id="galleryBlock">
  <article>
    <h2>
      Create Gallery
    </h2>
    <form action="" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="photo">
          upload Photo
        </label>
        <input type="file" name="photo" id="photo" />
      </div>
      <div class="form-group">
        <label for="photo_name">
          Photo Name
        </label>
        <input type="text" name="photo_name" id="photo_name" />
      </div>
      <div class="form-group">
        <label for="photo_description">
          Description
        </label>
        <textarea
          name="photo_description"
          id="photo_description"
          cols="30"
          rows="10"
        ></textarea>
      </div>
      <div class="form-group">
        <button>
          Create Gallery
        </button>
      </div>
    </form>
  </article>
</section>